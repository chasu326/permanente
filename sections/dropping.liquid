    <script>
     // 画像クリックで出てくる
    $(function () {
      $('span').click(function() { 
        if ($(this).attr('class') == 'selected') {
          // メニュー非表示
          $(this).removeClass('selected').next(".madaln-box").slideUp('fast');
        } else {
          // 表示しているメニューを閉じる
          $('span').removeClass('selected');
          $('.panel_box_car').removeClass('isActive');
          $(".madaln-box").hide();
    
          // メニュー表示
          $(this).addClass('selected').next(".madaln-box").slideDown('fast');
        }    
      });
      
