    $(function() {
        $('.btn_area>.tab_btn').click(function() {
            var num = $(this).parent().children('.tab_btn').index(this);
                $('.btn_area').each(function(){
                $('>.tab_btn',this).removeClass('active').eq(num).addClass('active');
            });
            $('.tab_panel ').hide().eq(num).show();
